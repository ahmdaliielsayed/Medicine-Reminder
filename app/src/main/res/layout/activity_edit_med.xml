<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_condition_edit_med"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_schedule_edit_med">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_condition_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Condition"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_text_reason_edit_med"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:shadowColor="#FF0000"
                        android:text="Cough"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_condition_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_condition_edit_med"
                        tools:ignore="TouchTargetSizeCheck" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_schedule_edit_med"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@+id/card_view_med_name_edit_med"
                app:layout_constraintStart_toStartOf="@+id/card_view_med_name_edit_med"
                app:layout_constraintTop_toBottomOf="@+id/card_view_reminder_edit_med">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_schedule_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Schedule"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_start_date_label_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Start date:"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_schedule_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_schedule_edit_med" />

                    <TextView
                        android:id="@+id/text_view_start_date_label_edit_med2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Start date:"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_schedule_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_schedule_edit_med" />

                    <TextView
                        android:id="@+id/text_view_end_date_label_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="End date:"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_start_date_label_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_start_date_label_edit_med" />

                    <TextView
                        android:id="@+id/text_view_days_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Days"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_schedule_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/divider_edit_med" />

                    <TextView
                        android:id="@+id/text_view_start_date_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Sun, 10 Apr"
                        android:textColor="@color/dodger_blue"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_start_date_label_edit_med"
                        app:layout_constraintStart_toEndOf="@+id/text_view_start_date_label_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_start_date_label_edit_med" />

                    <TextView
                        android:id="@+id/text_view_end_date_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="Sun, 10 Apr"
                        android:textColor="@color/dodger_blue"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_end_date_label_edit_med"
                        app:layout_constraintStart_toEndOf="@+id/text_view_end_date_label_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_end_date_label_edit_med" />

                    <View
                        android:id="@+id/divider_edit_med"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_end_date_label_edit_med" />

                    <RadioGroup
                        android:id="@+id/radio_group_days_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_days_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_days_edit_med">

                        <RadioButton
                            android:id="@+id/radio_button_every_day_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Every day" />

                        <RadioButton
                            android:id="@+id/radio_button_every_number_of_days_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Every number of days" />

                        <RadioButton
                            android:id="@+id/radio_button_specific_days_of_the_week_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Specific days of the week" />
                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_instructions_edit_med"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_condition_edit_med">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_view_instructions_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Instructions"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_should_this_be_taken_with_food_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Should this be taken with food?"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_instructions_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_instructions_edit_med" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_should_this_be_taken_with_food_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_should_this_be_taken_with_food_edit_med">

                        <RadioButton
                            android:id="@+id/radio_button_before_eating_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Before eating" />

                        <RadioButton
                            android:id="@+id/radio_button_while_eating_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="While eating" />

                        <RadioButton
                            android:id="@+id/radio_button_after_eating_edit_med"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="After eating" />

                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_med_name_edit_med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_med_name_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Medication Name"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edit_text_med_name_edit_med"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:shadowColor="#FF0000"
                        android:text="Curam"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_med_name_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_med_name_edit_med"
                        tools:ignore="TouchTargetSizeCheck" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_reminder_edit_med"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardElevation="5dp"
                app:layout_constraintEnd_toEndOf="@+id/card_view_med_name_edit_med"
                app:layout_constraintStart_toStartOf="@+id/card_view_med_name_edit_med"
                app:layout_constraintTop_toBottomOf="@+id/card_view_med_name_edit_med">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_first_dose_amount_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:text="TextView"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_first_dose_time_edit_med"
                        app:layout_constraintStart_toEndOf="@+id/text_view_first_dose_time_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_first_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_third_dose_amount_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_third_dose_time_edit_med"
                        app:layout_constraintStart_toStartOf="@+id/text_view_second_dose_amount_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_third_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_fourth_dose_amount_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_fourth_dose_time_edit_med"
                        app:layout_constraintStart_toStartOf="@+id/text_view_third_dose_amount_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_fourth_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_second_dose_amount_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_second_dose_time_edit_med"
                        app:layout_constraintStart_toStartOf="@+id/text_view_first_dose_amount_edit_med"
                        app:layout_constraintTop_toTopOf="@+id/text_view_second_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_reminder_times_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Reminder Times"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_third_dose_time_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="22:00"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_second_dose_time_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_second_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_fourth_dose_time_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="22:00"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_third_dose_time_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_third_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_second_dose_time_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="22:00"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_first_dose_time_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_first_dose_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_first_dose_time_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="10:00"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="@+id/text_view_reminder_times_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/spinner_reminder_times_edit_med" />

                    <Spinner
                        android:id="@+id/spinner_reminder_times_edit_med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:minHeight="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_reminder_times_edit_med"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <Switch
                        android:id="@+id/switch_med_reminder_times_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_reminder_times_edit_med"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_view_reminder_times_edit_med" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_prescription_refill_edit_med"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_instructions_edit_med">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <EditText
                        android:id="@+id/edit_text_remaining_med_amount_edit_med"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="number|textPersonName"
                        android:shadowColor="#FF0000"
                        android:text="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_refill_remaining_amount_label_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_refill_remaining_amount_label_edit_med"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/edit_text_reminder_amount_edit_med"
                        style="@style/Widget.AppCompat.EditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:ems="10"
                        android:inputType="number|textPersonName"
                        android:shadowColor="#FF0000"
                        android:text="2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/text_view_refill_remaining_amount_label_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_refill_before_how_many_edit_med"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/text_view_prescription_refill_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Prescription Refill"
                        android:textColor="@color/dodger_blue"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_refill_time_chooser_edit_med"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:text="11:00"
                        android:textColor="@color/dodger_blue"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_refill_what_time_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_refill_what_time_edit_med" />

                    <TextView
                        android:id="@+id/text_view_refill_remaining_amount_label_edit_med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Enter the amount of meds you currently have"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/text_view_prescription_refill_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_prescription_refill_edit_med" />

                    <TextView
                        android:id="@+id/text_view_refill_before_how_many_edit_med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="Remind me when remaining:"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/text_view_prescription_refill_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_remaining_med_amount_edit_med" />

                    <TextView
                        android:id="@+id/text_view_refill_what_time_edit_med"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="What time?"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/text_view_prescription_refill_edit_med"
                        app:layout_constraintTop_toBottomOf="@+id/edit_text_reminder_amount_edit_med" />

                    <Switch
                        android:id="@+id/switch_refill_reminder_edit_med"
