<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_add_med_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addmed.view.AddMedActivity">

    <include layout="@layout/add_med_toolbar" />

    <include layout="@layout/add_med_header" />

    <EditText
        android:id="@+id/edit_text_med_name_add_med"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/dodger_blue"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_add_header"
        tools:ignore="SpeakableTextPresentCheck" />

    <include layout="@layout/add_med_next_button" />

</androidx.constraintlayout.widget.ConstraintLayout>